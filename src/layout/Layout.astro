---
import Header from "@Components/Header.astro";
import Footer from "@Components/Footer.astro";
import ViewTransitions from "astro/components/ViewTransitions.astro";
import ScrollUp from "@Components/ScrollUp";
const { title } = Astro.props as {
  title: string;
};
import "swiper/css";
import "swiper/css/pagination";
import "swiper/css/navigation";
---

<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{`CLON Polideportivo Mercedes - ${title}`}</title>
    <ViewTransitions />
  </head>
  <body class="flex flex-col gap-2 overflow-x-hidden w-full h-full relative">
    <Header goBack={!title.includes("Inicio")} transition:persist />

    <div class="md:px-20 lg:px-24 xl:px-36 px-6 pt-20">
      <slot />
    </div>

    <ScrollUp transition:persist client:load />

    <Footer />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@500;600;700&display=swap");
</style>

<style>
  html,
  body {
    scroll-behavior: smooth;
  }

  html {
    color-scheme: dark;
  }

  body {
    background-image: url("https://polideportivomercedes.com.uy/assets/img/polideportivofondo.svg");
    background-repeat: no-repeat;
    background-position-y: center;
    background-attachment: fixed;
    background-size: cover;
    background-color: #212121;
    font-family: "Open Sans", sans-serif;
  }
</style>
